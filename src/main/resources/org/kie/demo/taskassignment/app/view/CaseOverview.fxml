<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kie.demo.taskassignment.app.view.CaseController">
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Choose scenario to run:">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="smallScenarioButton" mnemonicParsing="false" onAction="#handleLoadSmallScenario" prefWidth="200.0" text="Small Scenario">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="mediumScenarioButton" mnemonicParsing="false" onAction="#handleLoadMediumScenario" prefWidth="200.0" text="Medium Scenario">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="largeScenarioButton" mnemonicParsing="false" onAction="#handleLoadLargeScenario" prefWidth="200.0" text="Large Scenario">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="createCustomTaskButton" mnemonicParsing="false" onAction="#handleCreateCustomTaskDialog" prefWidth="200.0" text="Create Custom Task">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </top>
</BorderPane>
